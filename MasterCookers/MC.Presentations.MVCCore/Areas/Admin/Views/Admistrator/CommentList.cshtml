@using Mc.Domin.Comment
@model List<  Mc.ApplicationContracts.Comment.CommentViewmodel>;
@{
    ViewData["Title"] = "CommentList";
}

<h1>CommentList</h1>

<div class="card">
    <div class="card-header">
        <h3 class="float-left">Comments List</h3>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Status</th>
                <th>CreationDatatime</th>
                <th>Operations</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var comment in Model)
            {
                <tr>
                    <td>@comment.Id</td>
                    <td>@comment.Name</td>
                    <td>@comment.Email</td>
                    <td>@comment.contant</td>
                    <td>
                        @if (comment.statuse ==Statuses.dontsea)
                        {
                            <i class="fa fa-eye fa-2x text-info"></i>
                        }
                        @if (comment.statuse == Statuses.sea)
                        {
                            <i class="fa fa-close fa-2x text-danger"></i>
                        }
                        @if (comment.statuse == Statuses.applieded)
                        {
                            <i class="fa fa-check fa-2x text-success"></i>
                        }
                    </td>
                    <td>@comment.Datatime</td>
                    <td>
                        @if (comment.statuse == Statuses.dontsea)
                        {
                            <form method="post" asp-action="Confirm" class="float-left">
                                <button class="btn btn-success" >Confirm</button>
                                <input type="hidden" name="id" value="@comment.Id"/>
                            </form>
                            <form method="post" asp-action="Cancel" class="float-left">
                                <button class="btn btn-danger" >Cancel</button>
                                <input type="hidden" name="id" value="@comment.Id"/>
                            </form>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>