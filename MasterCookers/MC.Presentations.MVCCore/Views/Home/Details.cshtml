@using Mc.Domin.Comment
@model DtailsModels;
    ViewData["Title"] = "Details";
}

 

<main class="post blog-post col-lg-12">
    <div class="container">
        <div class="post-single">
            <div class="post-thumbnail">
                <img src="@Model.Dtails.image" alt="@Model.Dtails.Title" title="@Model.Dtails.Title" class="img-fluid">
            </div>
            <div class="post-details">
                <div class="post-meta d-flex justify-content-between">
                    <div class="category">
                        <a href="#">@Model.Dtails.Categorytiltle</a>
                    </div>
                </div>
                <h1>
                    @Model.Dtails.Title
                    <a href="#">
                        <i class="fa fa-bookmark-o"></i>
                    </a>
                </h1>
                <div class="post-footer d-flex align-items-center flex-column flex-sm-row">
                    <div class="d-flex align-items-center flex-wrap">
                        <div class="date">
                            <i class="icon-clock"></i> @Model.Dtails.Datatime</div>
                        <div class="comments meta-last"><i class="icon-comment"></i>12</div>
                    </div>
                </div>
                <div class="post-body">
                    <p>
                        @Model.Dtails.shortdicriptio
                    </p>
                    @Model.Dtails.contant
                </div>


                <div class="post-comments">
                    <header>
 
                    </header>
                    @foreach (var comment in Model.Comment)
                    {
@if (comment.statuse == Statuses.applieded)
{
    <div class="comment">
        <div class="comment-header d-flex justify-content-between">
            <div class="user d-flex align-items-center">
                <div class="image">
                    <img src="~/img/user.svg" alt="..." class="img-fluid rounded-circle">
                </div>
                <div class="title">
                    <strong>@comment.Name</strong><span class="date">@comment.Datatime</span>
                </div>
            </div>
        </div>
        <div class="comment-body">
            <p>@comment.contant</p>
        </div>
    </div>
}
                    }

                </div>

                <div class="add-comment">
                    <header>
                        <h3 class="h6">Leave a reply</h3>
                    </header>
                    <form class="commenting-form" method="post" asp-action="Createcomment">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <input type="text" asp-for="create.Name" placeholder="Name" class="form-control">
                            </div>
                            <div class="form-group col-md-6">
                                <input type="email" asp-for="create.Email" placeholder="Email Address (will not be published)" class="form-control">
                            </div>
                            <div class="form-group col-md-12">
                                <textarea asp-for="create.contant" placeholder="Type your comment" class="form-control"></textarea>
                            </div>
                            <input type="hidden"value="@Model.Dtails.id" asp-for="create.Cookesid"/>
                            <div class="form-group col-md-12">
                                <button type="submit" class="btn btn-secondary">Submit Comment</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>